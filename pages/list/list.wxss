/* pages/list/list.wxss */
.index-select-box {
  display: -webkit-box;
  display: flex;
  flex-wrap: nowrap;
  -webkit-align-self: center;
  align-self: center;
  position: relative;
}

.index-select-item.active {
  color: #00a0e9;
  border-bottom: 1px solid #00a0e9;
}

.index-select-item {
  border-bottom: 1px solid #ccc;
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  position: relative;
  overflow: hidden;
  font-size: 0.7rem;
  text-align: center;
  background-color: #fff;
  -webkit-box-flex: 1;
  color: #666;
}

.index-select-item+.index-select-item:before {
  content: "";
  height: 1rem;
  width: 1px;
  background-color: #ccc;
  left: 0;
  top: 0.5rem;
  position: absolute;
  z-index: 99;
}