.xinsu-title {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
}

.section {
	width: 100%;
	float: left;
	margin-bottom: 30rpx;
}

.section image {
	width: 60rpx;
	height: 60rpx;
	float: left;
	margin-left: 180rpx;
}

.section input {
	width: 68%;
	float: left;
	border: 1px solid #999;
	text-indent: 30rpx;
	font-size: 30rpx;
	height: 60rpx;
	line-height: 60rpx;
}

.section textarea {
	width: 68%;
	float: left;
	border: 1px solid #999;
	text-indent: 30rpx;
	font-size: 30rpx;
}

.xinsu-lable {
	width: 20%;
	float: left;
	text-align: center;
	font-size: 30rpx;
	height: 60rpx;
	line-height: 60rpx;
}

.xinsu-up-img {
	width: 80%;
	float: left;
	position: relative;
}

.xinsu-up-img button {
	top: 0;
	position: absolute;
}

.display-n {
	display: none;
}
