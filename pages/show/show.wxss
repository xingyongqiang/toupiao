/* pages/show/show.wxss */

image {
  width: 94%;
  height: 590rpx;
  margin: auto;
}

.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}

.detail .title {
  font-size: 40rpx;
  margin: 10rpx 3%;
  color: black;
  text-align: justify;
}

.temp {
  height: 100rpx;
}

text {
  display: block;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}

.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx 3% 90rpx 3%;
}

.xinsu-xiao-fen {
  border-top: 1px solid #f6f6f6;
  border-bottom: 1px solid #f6f6f6;
  padding: 5px 15px;
}

.clear {
  clear: both;
  overflow: hidden;
}

.flex {
  position: relative;
  width: auto;
  margin: 0 -15px;
  padding: 3px 15px 0;
}

.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 100%;
}

.flex>.sub {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  overflow: hidden;
}

.xinsu-vote {
  position: fixed;
  bottom: 0;
  width:100%;
  background-color:#00a0e9;
  border-radius:0px;
  left:0;
  color: #fff;
}
